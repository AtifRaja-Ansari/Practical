/*WAP write a java program to print the pattern
	     *
     *   *
   *   *   *
 *   *   *   *

*/



import java.io.*;
public class TrianglePattern
{
public static void printTriangle(int n)
{
//outer loop handle no. of rows , n in this case
for(int i=0;i<=n;i++)
{//outer for-Loop

//Inner loop to handle number spaces
for(int j=n-1;j>=i;j--)
{//inner loop
System.out.print(" ");
}

//ineer loop to handle no.of columns
for(int j=0;j<i;j++)
{
System.out.print("* ");
}
//ending line after each row
System.out.println();
}
}
public static void main(String[] args)
{
int n=5;
printTriangle(n);//calling method

}
}
